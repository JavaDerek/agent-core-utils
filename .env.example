# Example environment configuration for agent-core-utils
# Copy this file to .env and fill in your specific values

# OpenTelemetry Configuration (optional)
OTEL_BSP_SCHEDULE_DELAY=1
OTEL_BSP_MAX_EXPORT_BATCH_SIZE=1
OTEL_EXPORTER_OTLP_INSECURE="true"

# LLM Configuration
LLM_TEMPERATURE="1"
LLM_MODEL="gpt-4"
LLM_API_KEY="your_openai_api_key_here"

# Gmail Service Account (optional, for email tools)
GMAIL_SERVICE_ACCOUNT_FILE="path/to/your/service-account.json"

# SerpApi (for web searches, get your key from https://serpapi.com/)
SERPAPI_API_KEY="your_serpapi_key_here"

# Redis Configuration (for multi-agent communication)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD="your_redis_password"

# Langfuse (for LLM observability, optional)
LANGFUSE_HOST="http://localhost:3000"
LANGFUSE_SECRET_KEY="your_langfuse_secret_key_here"
LANGFUSE_PUBLIC_KEY="your_langfuse_public_key_here"
